<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<span>Credit Card</span>

<div class="row">

    <div class="col-75">
        <div class="container">
            <form action="/Payment/CheckOut">
                <div class="row">
                    <div class="col-50">
                        <h3>Billing Address</h3>

                        <label for="firstname"><i class="fa fa-user"></i> Full Name</label>
                        <input type="text" id="firstname" name="firstname" placeholder="John M. Doe" data-val="true" data-val-required="Bu alan boş geçilemez" data-val-length-min="5">
                        <span class="field-validation-valid" data-valmsg-for="firstname" data-valmsg-replace="true"></span>

                        <label for="email"><i class="fa fa-envelope"></i> Email</label>
                        <input type="text" id="email" name="email" placeholder="john@example.com" data-val="true" data-val-required="Bu alan boş geçilemez">
                        <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>

                        <label for="address"><i class="fa fa-address-card-o"></i> Address</label>
                        <input type="text" id="adr" name="address" placeholder="542 W. 15th Street" data-val="true" data-val-required="Bu alan boş geçilemez">
                        <span class="field-validation-valid" data-valmsg-for="address" data-valmsg-replace="true"></span>

                    </div>

                    <div class="col-50">
                        <h3>Payment</h3>
                        <label for="fname">Accepted Cards</label>
                        <div class="icon-container">
                            <i class="fa fa-cc-visa" style="color:navy;"></i>
                            <i class="fa fa-cc-amex" style="color:blue;"></i>
                            <i class="fa fa-cc-mastercard" style="color:red;"></i>
                            <i class="fa fa-cc-discover" style="color:orange;"></i>
                        </div>
                        <label for="cardname">Kart Sahibi</label>
                        <input type="text" id="cardname" name="cardname" placeholder="John More Doe" data-val="true" data-val-required="Bu alan boş geçilemez" data-val-length-min="5" data-val-length="5 haneden kısa olamaz">
                        <span class="field-validation-valid" data-valmsg-for="cardname" data-valmsg-replace="true"></span>

                        <label for="cardnumber">Kredi Kartı Numarası</label>
                        <input type="text" id="cardnumber" name="cardnumber" placeholder="1111222233334444" data-val="true" data-val-required="Bu alan boş geçilemez" data-val-number="Sayı giriniz" data-val-length-min="13" data-val-length-max="19" >
                        <span class="field-validation-valid" data-valmsg-for="cardnumber" data-valmsg-replace="true"></span>

                        <label for="expmonth">Ay</label>
                        <select for="expmonth" id="expmonth">
                            @for (byte i = 1; i < 13; i++)
                            {
                                <option value="@i">@i</option>
                            }

                        </select>

                        <label for="expyear">Yıl</label>
                        <select for="expyear" id="expyear">
                            @for (int i = DateTime.Now.Year; i < DateTime.Now.Year + 10; i++)
                            {
                                <option value="@i">@i</option>
                            }

                        </select>

                        <div class="row">
                            <div class="col-50">
                                <label for="cvv">CVV</label>
                                <input type="number" id="cvv" name="cvv" placeholder="CVV" data-val="true" data-val-number="3 Haneli Sayı giriniz" data-val-required="Bu alan boş geçilemez" data-val-length-min="3" data-val-length-max="3" >
                                <span class="field-validation-valid" data-valmsg-for="cvv" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="~/Payment/CheckOut"> Onay</a>
       @*         <input type="submit" value="Continue to checkout" class="btn">*@
            </form>
        </div>
    </div>

    <div class="col-25">
        <div class="container">
            <h4>
                Cart
                <span class="price" style="color:black">
                    <i class="fa fa-shopping-cart"></i>
                    <b>4</b>
                </span>
            </h4>

            <hr>
            <p>Total <span class="price" style="color:black"><b>$30</b></span></p>
        </div>
    </div>

</div>